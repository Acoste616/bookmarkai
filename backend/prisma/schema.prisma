datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Bookmark {
  id          String   @id @default(cuid())
  title       String
  url         String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  // Add other fields like categoryId, tags, etc. as needed
} 